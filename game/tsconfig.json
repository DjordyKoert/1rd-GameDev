{
  "compilerOptions": {
      "target": "es6",
      "sourceMap": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "removeComments": true,
      "out": "build/app.js",
      "noEmitOnError": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
